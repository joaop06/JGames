# Desenvolvimento: deps; c√≥digo montado via volume, tsx watch para hot reload
FROM node:22-alpine
RUN apk add --no-cache wget
WORKDIR /app
COPY package.json package-lock.json* ./
RUN npm ci
COPY scripts/entrypoint-dev.sh ./scripts/
RUN chmod +x scripts/entrypoint-dev.sh
EXPOSE 3000
ENTRYPOINT ["/bin/sh", "/app/scripts/entrypoint-dev.sh"]
CMD ["npm", "run", "dev"]
